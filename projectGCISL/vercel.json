{
  "rewrites": [
    { "source": "/api/tasks/:id/clear", "destination": "/api/tasks/[id]/clear" },
    { "source": "/api/tasks/:id", "destination": "/api/tasks/[id]/index" },
    { "source": "/api/tasks/assign", "destination": "/api/tasks/assign" },
    { "source": "/api/tasks/remove", "destination": "/api/tasks/remove" },
    { "source": "/api/tasks", "destination": "/api/tasks/index" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, no-cache, must-revalidate, proxy-revalidate"
        }
      ]
    }
  ]
}
